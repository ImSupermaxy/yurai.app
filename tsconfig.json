{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@/screns/*": [
        "./app/screens/*"
      ],
      "@/constants": [
        "./app/constants/*"
      ],
      "@/common/*": [
        "./app/components/common/*"
      ],
      "@/forms/*": [
        "./app/components/forms/*"
      ],
      "@/specific/*": [
        "./app/components/specific/*"
      ],
      "@/navigators/*": [
        "./app/navigation/*"
      ],
      "*": ["./node_modules/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
